<%= erb :_header %>

<div class="container">
    <h1> New Post </h1>
    <br>

    <form action="/edit/<%= params[:id] %>" method="post">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input type="text" class="form-control" id="inputTitle" value="<%= @post.title %>" name="post[title]">
    </div>
    <div class="form-group">
        <label for="inputBody">Body</label>
        <textarea class="form-control" id="inputBody" rows = "8" name = "post[body]"><%= @post.body %></textarea>
    </div>
    <div class="form-group">
        <label for="inputTitle">Author</label>
        <input type="author" class="form-control" id="inputTitle" value="<%= @post.author %>" name = "post[author]">
    </div>
    <div class="form-group">
        <label for="inputTags">Tags</label>
        <input type="Tags" class="form-control" id="inputTags" value="<%= @tags %>" name = "post[tags]">
    </div>

    <button type="submit" class="btn btn-primary pull-right">Submit</button>
</form>



</div>